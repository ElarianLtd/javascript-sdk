{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base"
    ],
    "plugins": [
        "mocha",
        "security"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": [2, 4],

        "import/no-extraneous-dependencies": [2, {
            "devDependencies": true
        }]
    }
}