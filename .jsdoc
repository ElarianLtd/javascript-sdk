{
    "plugins": [
        "plugins/markdown"
    ],
    "recurseDepth": 100,
    "source": {
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_",
        "exclude": ["lib/utils/service"]
    },
    "sourceType": "module",
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,

        "systemName": "Elarian",
        "copyright":  "Elarian",
        "includeDate": true,
        "navType": "inline",
        "theme": "flatly",
        "linenums": false,
        "collapseSymbols": true,
        "inverseNav": false,
        "outputSourceFiles": false,
        "outputSourcePath": false,
        "dateFormat": "llll",
        "syntaxTheme": "dark",
        "sort": "longname, version, since",
        "search": true
    },

    "opts": {
        "template": "node_modules/ink-docstrap/template",
        "encoding": "utf8",
        "destination": "./doc",
        "recurse": true
    }
}